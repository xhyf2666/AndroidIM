<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ListView
        android:id="@+id/groupListView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:transcriptMode="normal">

    </ListView>

    <EditText
        android:id="@+id/groupInput"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/groupListView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="39dp"
        android:hint="在这里输入消息" />

    <ImageButton
        android:id="@+id/button_send_file"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignEnd="@+id/groupInput"
        android:layout_alignBottom="@+id/groupInput"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="98dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_send_file" />

    <Button
        android:id="@+id/buttonGroupSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/groupInput"
        android:layout_alignEnd="@+id/groupInput"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="-103dp"
        android:layout_toEndOf="@+id/groupInput"
        android:text="发送" />


</RelativeLayout>